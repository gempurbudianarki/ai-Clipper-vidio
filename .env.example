# ======================================================
# AI VIDEO EDITOR STUDIO - ENVIRONMENT CONFIGURATION
# ======================================================
# Copy this file to .env
# Fill the values according to your environment
# NEVER commit .env to GitHub
# ======================================================


# =========================
# APP CONFIG
# =========================
APP_NAME="AI Video Editor Studio"
APP_ENV=development
APP_DEBUG=true
APP_HOST=127.0.0.1
APP_PORT=8000


# =========================
# SERVER
# =========================
UVICORN_RELOAD=true
UVICORN_LOG_LEVEL=info


# =========================
# STORAGE PATHS
# =========================
STORAGE_ROOT=storage

UPLOAD_DIR=storage/uploads
CLIP_DIR=storage/clips
FINAL_DIR=storage/final
ASS_DIR=storage/ass
TRANSCRIPT_DIR=storage/transcripts


# =========================
# FFMPEG CONFIG
# =========================
# If ffmpeg is in PATH, leave empty
# Example Windows:
# FFMPEG_PATH=C:/ffmpeg/bin/ffmpeg.exe
# Example Linux:
# FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_PATH=


# =========================
# AI - WHISPER (Speech to Text)
# =========================
WHISPER_MODEL=base
WHISPER_LANGUAGE=id
WHISPER_DEVICE=cpu
WHISPER_FP16=false


# =========================
# AI - DEEPSEEK (Reasoning / Clip Selection)
# =========================
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.4
DEEPSEEK_MAX_TOKENS=2048


# =========================
# AI - QWEN (Hook / Language)
# =========================
QWEN_API_KEY=
QWEN_MODEL=qwen-plus
QWEN_TEMPERATURE=0.6
QWEN_MAX_TOKENS=1024


# =========================
# SUBTITLE / ASS STYLE
# =========================
SUBTITLE_FONT=Arial
SUBTITLE_FONT_SIZE=64
SUBTITLE_PRIMARY_COLOR=&H00FFFFFF
SUBTITLE_OUTLINE_COLOR=&H00000000
SUBTITLE_SHADOW=1
SUBTITLE_ALIGNMENT=2
SUBTITLE_MARGIN_V=160


# =========================
# CLIP GENERATION DEFAULTS
# =========================
CLIP_MIN_SECONDS=15
CLIP_MAX_SECONDS=60
CLIP_MAX_COUNT=6


# =========================
# SECURITY / LIMITS
# =========================
MAX_UPLOAD_MB=2048
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,mkv,avi


# =========================
# FUTURE FEATURES (OPTIONAL)
# =========================
ENABLE_WEBSOCKET=false
ENABLE_MUSIC_BEAT_SYNC=false
ENABLE_MULTI_LANGUAGE=false
